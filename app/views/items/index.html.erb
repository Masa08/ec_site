<%= form_for(@item) do |f| %>
    <%= f.attachment_field :jacket_image %>
    名前<%= f.text_field :item_name %>
    数<%= f.text_field :stock %>
    アーティスト名<%= f.text_field :artist_name %>
    値段<%= f.text_field :price %>
    ラベル<%= f.text_field :label %>
    アイテムステータス<%= f.text_field :item_status_id %>
    リリース日<%= f.text_field :release_date_id %>
    <%= f.submit %>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <div class="container-left">
                <h3 class="container-left__title">Category</h3>
                <ul>
                    <li>w</li>
