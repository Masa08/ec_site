                            <tr><th>数量</th><td>5
                                <span class="pull-right">　
                                    <input type="number" name="example" min="0" max="500" value="0">
                                    <button type="submit" class="btn btn-primary">変更</button>
                                    <button type="submit" class="btn btn-primary">削除</button>
                                </span>
                            </td></tr>
                        </table>
                    </div>
                </div>

