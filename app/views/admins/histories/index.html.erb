<div class="container">
        <div class="row">
            <section class="admin">
            
            <%= render 'admins/list' %>
             <!-- main -->
        <div class="col-md-9">
            <div class="page-header">
                <h1 class="col-md-5"><small>購入履歴一覧</small>
                    <%= search_form_for @searches, url: admins_histories_path do |f|  %>
                        <%= f.collection_select :status_id, Status.all, :id, :status_name, class: "" %>
                        <%= f.submit "絞り込む" %>
                    <% end -%>
        </h1>
    </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>購入者</th>
                        <th>購入日時</th>
                        <th>ステータス</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @histories.each do |history| %>
                    <tr>
                        <td><%= history.id %></td>
                        <td><%= history.user.user_name_kana %>様</td>
                        <td><%= history.created_at %></td>
                        <td><%= history.status.status_name %></td>
                        <td>
                            <%= link_to "詳細", admins_history_path(history.id), :class => "btn btn-primary btn-xs" %>
                            <%= link_to "編集", edit_admins_history_path(history.id), :class => "btn btn-primary btn-xs" %>
                            <%= link_to "削除", admins_history_path(history), method: :delete, :class => "btn btn-primary btn-xs" %>
                        </td>
                    </tr>
                    <% end -%>
                </tbody>
            </table>
        </div>

                <p class="text-muted text-center">&copy; 2017-2018</p>
        </div>
    </div>
</section>

