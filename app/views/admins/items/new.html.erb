<div class="container">
        <div class="row">
            <section class="admin">
                <%= render 'admins/list' %>
                <!-- main -->


<!-- main -->
        <div class="col-md-9">
            <div class="page-header">
                        <h1><small>新規在庫追加</small></h1>
                    </div>

				<%= form_for([:admins, @item]) do |f| %>
                    商品画像<%= f.attachment_field :jacket_image %>

                    <%= f.fields_for :item_genres do |i| %>
                    ジャンル <div> <%= i.collection_select :genre_id, Genre.all, :id, :genre_name, :class => 'form-control' %></div>
                    <% end %>

                    <p>名前</p><%= f.text_field :item_name, :class => 'form-control', :placeholder => '商品名を入力してください' %>
                    
                    アーティスト名<%= f.text_field :artist_name, :class => 'form-control', :placeholder => 'アーティスト名を入力してください' %>
                    
                    価格<%= f.number_field :price, :class => 'form-control', :placeholder => '商品の価格を入力してください' %>
                    ラベル<%= f.text_field :label, :class => 'form-control', :placeholder => 'レコード会社を入力してください' %>
                    
                    タイプ <div> <%= f.collection_select :type_id, Type.all, :id, :category_name, :class => 'form-control' %></div>
                    
                    リリース日<%= f.text_field :release_date_id, :class => 'form-control', :placeholder => 'リリースされた年月日を入力してください' %>

                    数<%= f.number_field :stock %>
                
                <%= f.submit "追加", :class => 'btn btn-primary' %>
            <% end -%>



        </div>






        <p class="text-muted text-center">&copy; 2017-2018</p>

    </section>
    </div>
</div>
