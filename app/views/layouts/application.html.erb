<!DOCTYPE html>
<html>
    <head>
        <title>EcSite</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <header class="w-100">
            <div class="logo float-left">
                <h1 class="header__logo">Logo</h1>
            </div>
            <nav class="navbar navbar-toggleable-md navbar-light bg-faded float-right">
                <% if user_signed_in? %>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link header__nav--btn" href="#">カート</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link header__nav--btn" href="#">マイページ</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0 header__nav--search">
                            <input class="form-control mr-sm-2" type="text" placeholder="Search">
                            <button class="btn my-2 my-sm-0 btn__color" type="submit">Search</button>
                        </form>
                    </li>
                </ul>
            <% else %>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link header__nav--btn" href="#">ホーム</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link header__nav--btn" href="#">登録</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link header__nav--btn" href="#">ログイン</a>
                    </li>
                    <li class="nav-item">
                      <%= search_form_for @search do |f| %>

                        <%= f.label :item_name_cont, "商品名" %>
                        <%= f.search_field :item_name_cont %>
                        <%= f.submit "検索", class: 'btn my-2 my-sm-0 btn__color' %>
                        <% end %>
                        <!-- <form class="form-inline my-2 my-lg-0 header__nav--search">
                            <input class="form-control mr-sm-2" type="text" placeholder="Search">
                            <button class="btn my-2 my-sm-0 btn__color" type="submit">Search</button>
                        </form> -->
                    </li>
                </ul>
                <% end %>
            </nav>
        </header>
        <%= yield %>
    </body>
</html>
