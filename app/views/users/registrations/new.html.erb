 <div class="container">
        <div class="row">
            <form class="form-signup">
                <div class="text-center">
                    <img src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                    <h1 class="h3 font-weight-normal">新規登録</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>


                <div class="form-label-group">
                  <label for="inputkanji">名前(漢字)</label>
                  <input type="kanji" id="inputKanji" class="form-control" placeholder="名前(漢字)" required autofocus>
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="form-label-group">
                  <label for="inputKana">名前(カタカナ)</label>
                    <input type="Kana" id="inputKana" class="form-control" placeholder="名前(カタカナ)" required>
                </div>

                <div class="form-label-group">
                  <label for="inputAddress">住所</label>
                    <input type="Address" id="inputAddress" class="form-control" placeholder="住所" required>
                </div>

                <div class="form-label-group">
                  <label for="inputPostalcode">郵便番号</label>
                    <input type="Postalcode" id="inputPostalcode" class="form-control" placeholder="郵便番号" required>
                </div>

                <div class="form-label-group">
                  <label for="inputinputPhonenumber">電話番号</label>
                    <input type="inputPhonenumber" id="inputPhonenumber" class="form-control" placeholder="電話番号" required>
                </div>

                <div class="form-label-group">
                   <div class="field">
                   <%= f.label :email %><br />
                   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                   </div>
                  <label for="inputEmail">メールアドレス</label>
                    <input type="Email" id="inputEmail" class="form-control" placeholder="メールアドレス" required>
                </div>

                <div class="form-label-group">
                  <label for="inputPassword">パスワード</label>
                    <input type="password" id="inputPassword" class="form-control" placeholder="パスワード" required>
                </div>
                <div class="field">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
                </div>

                <div class="checkbox">
                  <label>
                   <input type="checkbox" value="remember-me"> Remember me
                 </label>
               </div>
                <%= f.submit "新規登録する", class: "btn btn-lg btn-primary btn-block" %>
                <% end %>

          <%= render "users/shared/links" %>

                <p class="text-muted text-center">&copy; 2017-2018</p>
            </form>
        </div>
    </div>