 <div class="container">
  <div class="row">
      <div class="text-center">
        <h1 class="h3 font-weight-normal">新規登録</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {id: 'form-signup', class: 'form-signup'} ) do |f| %>
      <%= devise_error_messages! %>


      <div class="form-label-group">
        <%= f.label :user_name_kanji,"名前(漢字)" %><br />
        <%= f.text_field :user_name_kanji, autofocus: true, autocomplete: "user_name_kanji", class: "form-control",placeholder: "名前(漢字)" %>
      </div>

      <div class="form-label-group">
        <%= f.label :user_name_kana,"名前(カタカナ)" %><br />
        <%= f.text_field :user_name_kana, autofocus: true, autocomplete: "user_name_kana", class: "form-control",placeholder: "名前(カタカナ)" %>
      </div>

      <div class="form-label-group">
        <%= f.label :postal_code,"郵便番号" %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control",placeholder: "郵便番号" %>
      </div>

      <div class="form-label-group">
        <%= f.label :address,"住所" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control",placeholder: "住所" %>
      </div>


      <div class="form-label-group">
        <%= f.label :phone_number,"電話番号" %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control",placeholder: "電話番号" %>
      </div>

      <div class="form-label-group">
       <div class="field">
         <%= f.label :email,"メールアドレス" %><br />
         <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "メールアドレス" %>
       </div>

      <div class="field">
        <%= f.label :password,"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control",placeholder: "パスワード" %>
      </div>

    <div class="field">
      <%= f.label :password_confirmation,"パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード確認" %>
    </div>

   <%= f.submit "新規登録する", class: "btn btn-lg btn-primary btn-block" %>
   <%= render "users/shared/links" %>
   <% end %>

   <p class="text-muted text-center">&copy; 2017-2018</p>
 </form>
</div>
</div>
