<div class="container form">
        <div class="row">
                <div class="text-center">
                    <h1 class="h3 font-weight-normal">ログイン</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-label-group">
                  <div class="field">
                    <%= f.label :email,"メールアドレス" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
                  </div>
                </div>

                <div class="form-label-group">
                  <%= f.label :password, "パスワード" %><br />
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード"%>
                </div>

                <div class="form-label-group">
                    <%= f.label :password_confirmation,"パスワード確認" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード確認" %>
                </div>


                <% if devise_mapping.rememberable? -%>
                  <div>
                    <%= f.check_box :remember_me, class: "checkbox" %>
                  <%= f.label :remember_me %>
                  </div>

                <% end -%>
                <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

                <%= render "users/shared/links" %>
                <% end %>


                <p class="text-muted text-center">&copy; 2017-2018</p>
        </div>
    </div>

